@model DKMovies.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Bảng điều khiển quản trị";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid px-4">
    <div class="d-flex align-items-center mb-4">
        <i class="fas fa-tachometer-alt text-primary me-3 fs-3"></i>
        <h2 class="mb-0 fw-bold text-dark">Bảng điều khiển</h2>
    </div>

    <!-- Dashboard Statistics Cards -->
    <div class="row g-4 mb-5">
        <!-- Users Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-info text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Người dùng</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalUsers</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-users fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminUser")"
                   class="card-footer bg-white border-0 text-info text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Xem chi tiết</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- Employees Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-success text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Nhân viên</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalEmployees</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-user-tie fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminEmployee")"
                   class="card-footer bg-white border-0 text-success text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Xem chi tiết</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- Movies Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-warning text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Phim</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.Movies.</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-film fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminMovie")"
                   class="card-footer bg-white border-0 text-warning text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Quản lý phim</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- ShowTimes Card -->
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-danger text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Suất chiếu</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalShowTimes</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-clock fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminShowTime")"
                   class="card-footer bg-white border-0 text-danger text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Quản lý suất chiếu</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="row g-4">
        <!-- Concessions Card -->
        <div class="col-xl-4 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-secondary text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="text-uppercase small opacity-75 mb-2">Món ăn</div>
                            <div class="h4 mb-0 fw-bold">@ViewBag.TotalConcessions</div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-2">
                            <i class="fas fa-utensils fs-5"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "AdminConcession")"
                   class="card-footer bg-white border-0 text-secondary text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Quản lý món ăn</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>

        <!-- Revenue Card -->
        <div class="col-xl-8 col-md-6">
            <div class="card border-0 shadow-sm h-100 overflow-hidden position-relative">
                <div class="card-body bg-gradient bg-dark text-white p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <div class="text-uppercase small opacity-75 mb-2">Tổng doanh thu (Đơn hàng + Vé)</div>
                            <div class="h3 mb-0 fw-bold">
                                @String.Format("{0:N0} ₫", ViewBag.TotalRevenue)
                            </div>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-chart-line fs-4"></i>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("MovieDashboard", "Admin")"
                   class="card-footer bg-white border-0 text-dark text-decoration-none py-3">
                    <div class="d-flex justify-content-between align-items-center small fw-medium">
                        <span>Xem phân tích phim</span>
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>