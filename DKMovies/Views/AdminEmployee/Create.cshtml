@model DKMovies.Models.Employee
@{
    ViewData["Title"] = "Thêm nhân viên mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between">
        <div>
            <h2 class="fw-bold text-dark mb-1">
                <i class="fas fa-user-plus me-2 text-primary"></i>Thêm nhân viên mới
            </h2>
            <p class="text-muted mb-0">Tạo hồ sơ cho nhân viên mới trong hệ thống</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>
</div>

<form asp-action="Create" method="post" id="employeeForm">
    <div class="row g-4">
        <!-- Personal Information -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h6 class="card-title mb-0 fw-semibold">
                        <i class="fas fa-user me-2 text-secondary"></i>Thông tin cá nhân
                    </h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <!-- Full Name -->
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label fw-medium">
                                Họ và tên <span class="text-danger">*</span>
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ">
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-medium">
                                Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="employee@example.com">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Phone -->
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label fw-medium">
                                Số điện thoại <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="0123456789">
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <!-- Gender -->
                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label fw-medium">Giới tính</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">Chọn giới tính</option>
                                <option value="Male">Nam</option>
                                <option value="Female">Nữ</option>
                                <option value="Other">Khác</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>

                        <!-- Birth Date - SỬA: DateOfBirth thay vì BirthDate -->
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label fw-medium">Ngày sinh</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control">
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <!-- Citizen ID -->
                        <div class="col-md-6">
                            <label asp-for="CitizenID" class="form-label fw-medium">CCCD/CMND</label>
                            <input asp-for="CitizenID" class="form-control" placeholder="Nhập số CCCD/CMND">
                            <span asp-validation-for="CitizenID" class="text-danger small"></span>
                        </div>

                        <!-- Address -->
                        <div class="col-12">
                            <label asp-for="Address" class="form-label fw-medium">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ">
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Work Information -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h6 class="card-title mb-0 fw-semibold">
                        <i class="fas fa-briefcase me-2 text-secondary"></i>Thông tin công việc
                    </h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <!-- Role - SỬA: RoleID thay vì Position -->
                        <div class="col-12">
                            <label asp-for="RoleID" class="form-label fw-medium">
                                Chức vụ <span class="text-danger">*</span>
                            </label>
                            <select asp-for="RoleID" class="form-select" asp-items="ViewBag.RoleID">
                                <option value="">-- Chọn chức vụ --</option>
                            </select>
                            <span asp-validation-for="RoleID" class="text-danger small"></span>
                        </div>

                        <!-- Theater -->
                        <div class="col-12">
                            <label asp-for="TheaterID" class="form-label fw-medium">
                                Rạp chiếu phim <span class="text-danger">*</span>
                            </label>
                            <select asp-for="TheaterID" class="form-select" asp-items="ViewBag.TheaterID">
                                <option value="">-- Chọn rạp --</option>
                            </select>
                            <span asp-validation-for="TheaterID" class="text-danger small"></span>
                        </div>

                        <!-- Salary -->
                        <div class="col-12">
                            <label asp-for="Salary" class="form-label fw-medium">
                                Lương (VND) <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="Salary" type="number" class="form-control" min="0" step="100000" placeholder="5000000">
                                <span class="input-group-text">₫</span>
                            </div>
                            <span asp-validation-for="Salary" class="text-danger small"></span>
                            <div class="form-text">Lương cơ bản hàng tháng</div>
                        </div>

                        <!-- Hire Date -->
                        <div class="col-12">
                            <label asp-for="HireDate" class="form-label fw-medium">
                                Ngày vào làm <span class="text-danger">*</span>
                            </label>
                            <input asp-for="HireDate" type="date" class="form-control">
                            <span asp-validation-for="HireDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Salary Preview Card -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light border-bottom py-3">
                    <h6 class="card-title mb-0 fw-semibold">
                        <i class="fas fa-calculator me-2 text-info"></i>Xem trước lương
                    </h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-2 text-center">
                        <div class="col-6">
                            <div class="bg-primary text-white rounded p-2">
                                <div class="fw-bold" id="monthlySalary">0 ₫</div>
                                <small>Lương tháng</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="bg-success text-white rounded p-2">
                                <div class="fw-bold" id="dailySalary">0 ₫</div>
                                <small>Lương ngày</small>
                            </div>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="bg-info text-white rounded p-2">
                                <div class="fw-bold" id="hourlySalary">0 ₫</div>
                                <small>Lương giờ (8h/ngày)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-2"></i>Hủy bỏ
                </a>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-primary" onclick="previewEmployee()">
                        <i class="fas fa-eye me-2"></i>Xem trước
                    </button>
                    <button type="submit" class="btn btn-primary" id="submitBtn">
                        <i class="fas fa-save me-2"></i>Tạo nhân viên
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Đặt ngày mặc định cho ngày vào làm
            const today = new Date().toISOString().split('T')[0];
            $('#HireDate').val(today);

            // Cập nhật lương theo thời gian thực
            $('#Salary').on('input', function () {
                updateSalaryPreview();
            });
            updateSalaryPreview();

            // Tự động focus ô Họ và tên
            $('input[name="FullName"]').focus();

            // Bắt sự kiện submit form
            $('#employeeForm').submit(function (e) {
                if (!validateForm()) {
                    e.preventDefault();
                    return false;
                }

                $('#submitBtn').html('<i class="fas fa-spinner fa-spin me-2"></i>Đang tạo...');
                $('#submitBtn').prop('disabled', true);
            });
        });

        function updateSalaryPreview() {
            const salary = parseFloat($('#Salary').val()) || 0;
            const daily = salary / 30;
            const hourly = daily / 8;

            $('#monthlySalary').text(salary.toLocaleString('vi-VN') + ' ₫');
            $('#dailySalary').text(Math.round(daily).toLocaleString('vi-VN') + ' ₫');
            $('#hourlySalary').text(Math.round(hourly).toLocaleString('vi-VN') + ' ₫');
        }

        function validateForm() {
            let isValid = true;
            const requiredFields = ["FullName", "Email", "Phone", "RoleID", "TheaterID", "Salary", "HireDate"];

            requiredFields.forEach(field => {
                const el = $(`[name="${field}"]`);
                if (!el.val()) {
                    el.addClass('is-invalid');
                    isValid = false;
                } else {
                    el.removeClass('is-invalid');
                }
            });

            const salary = parseFloat($('#Salary').val());
            if (isNaN(salary) || salary <= 0) {
                $('#Salary').addClass('is-invalid');
                isValid = false;
            }

            const hireDateVal = $('#HireDate').val();
            if (hireDateVal) {
                const hireDate = new Date(hireDateVal);
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                if (hireDate > today) {
                    $('#HireDate').addClass('is-invalid');
                    alert('Ngày vào làm không thể là ngày trong tương lai!');
                    isValid = false;
                }
            }

            const email = $('#Email').val();
            const emailRegex = /^[^@@\s]+@@[^@@]+\.[^@@]+$/;
            if (email && !emailRegex.test(email)) {
                $('#Email').addClass('is-invalid');
                alert('Định dạng email không hợp lệ!');
                isValid = false;
            }

            return isValid;
        }

        function previewEmployee() {
            if (!validateForm()) return;

            const name = $('#FullName').val();
            const email = $('#Email').val();
            const phone = $('#Phone').val();
            const salary = parseInt($('#Salary').val()).toLocaleString('vi-VN') + ' ₫';

            alert(`Xem trước thông tin nhân viên:\n- Họ tên: ${name}\n- Email: ${email}\n- SĐT: ${phone}\n- Lương: ${salary}`);
        }
    </script>
}







